<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333">

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="16dp"
        android:text="还没有账号？立即注册"
        android:textColor="#666"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="16dp"
        android:text="忘记密码"
        android:textColor="#666"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_login_btn"
        android:gravity="center"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@mipmap/login_icon_password"
        android:drawablePadding="20dp"
        android:gravity="center|left"
        android:hint="密码"
        android:inputType="textVisiblePassword"
        android:textColor="#d3d3d3"
        android:textColorHint="#d3d3d3"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@mipmap/login_icon_user"
        android:drawablePadding="20dp"
        android:gravity="center|left"
        android:hint="手机"
        android:inputType="phone"
        android:textColor="#d3d3d3"
        android:textColorHint="#d3d3d3"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/login_logo"
        app:layout_constraintBottom_toTopOf="@+id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="您可以选择已下方式登录"
        android:textColor="#666"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="@+id/login_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/login_txt"
        app:layout_constraintTop_toTopOf="@+id/login_txt" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="@+id/login_txt"
        app:layout_constraintLeft_toRightOf="@+id/login_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_txt" />

    <ImageView
        android:id="@+id/qq"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/icon_qq"
        app:layout_constraintBottom_toBottomOf="@+id/weibo"
        app:layout_constraintLeft_toRightOf="@+id/weibo"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/wechat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/icon_wechat"
        app:layout_constraintBottom_toBottomOf="@+id/weibo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/weibo" />

    <ImageView
        android:id="@+id/weibo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/icon_weibo"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>