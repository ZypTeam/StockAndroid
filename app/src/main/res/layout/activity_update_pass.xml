<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <com.yiyoupin.stock.ui.view.BackTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#d3d3d3"
        android:textSize="15sp"
        android:text="密码由6-20位字母、数字或符号组成"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:textColor="#d3d3d3"
        android:text="新密码"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:background="#1e1e1e"
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintTop_toTopOf="@+id/password"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:inputType="textVisiblePassword"
        android:maxLength="11"
        android:textColor="#d3d3d3"
        android:textColorHint="#5f5f5f"
        android:textSize="16sp" />

    <View
        android:background="@color/line_color"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        android:layout_width="0dp"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/comfir"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#d3d3d3"
        android:text="确认密码"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:background="#1e1e1e"
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/input_comfir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/comfir"
        app:layout_constraintRight_toRightOf="@+id/comfir"
        app:layout_constraintTop_toTopOf="@+id/comfir"
        app:layout_constraintBottom_toBottomOf="@+id/comfir"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:inputType="textVisiblePassword"
        android:maxLength="11"
        android:textColor="#d3d3d3"
        android:textColorHint="#5f5f5f"
        android:textSize="16sp" />

    <TextView
        android:textSize="16sp"
        android:textColor="@color/write"
        android:text="完成"
        android:gravity="center"
        android:id="@+id/submit"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/bg_register_get_code"
        android:layout_width="0dp"
        android:layout_height="50dp" />
</android.support.constraint.ConstraintLayout>