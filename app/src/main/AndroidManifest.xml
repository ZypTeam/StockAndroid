<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yiyoupin.stock">

    <application
        android:name=".StockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--登录-->
        <activity android:name=".ui.activity.LoginActivity"
            android:screenOrientation="portrait"/>
        <!--获取验证码-->
        <activity android:name=".ui.activity.GetPhoneCodeActivity"
            android:screenOrientation="portrait"/>
        <!--验证验证码-->
        <activity android:name=".ui.activity.AuthPhoneCodeActivity"
            android:screenOrientation="portrait"/>
        <!--设置昵称-->
        <activity android:name=".ui.activity.RegisterNameActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>